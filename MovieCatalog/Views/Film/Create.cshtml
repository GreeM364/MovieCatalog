@model MovieCatalog.Models.ViewModels.FilmCreateViewModel

<form method="post" asp-action="Create">
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CreateFilmRequest.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CreateFilmRequest.Name" class="form-control" />
                        <span asp-validation-for="CreateFilmRequest.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CreateFilmRequest.Director"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CreateFilmRequest.Director" class="form-control" />
                        <span asp-validation-for="CreateFilmRequest.Director" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CreateFilmRequest.Release"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CreateFilmRequest.Release" class="form-control" type="date" />
                        <span asp-validation-for="CreateFilmRequest.Release" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CreateFilmRequest.Categories">Categories</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CreateFilmRequest.Categories" asp-items="@Model.CategorySelectList" class="form-select" multiple></select>
                        <span asp-validation-for="CreateFilmRequest.Categories" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

