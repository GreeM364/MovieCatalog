@model MovieCatalog.Models.ViewModels.FilmUpdateViewModel

<form method="post">
    <input asp-for="UpdateFilmRequest.Id" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="UpdateFilmRequest.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UpdateFilmRequest.Name" class="form-control" />
                        <span asp-validation-for="UpdateFilmRequest.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="UpdateFilmRequest.Director"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UpdateFilmRequest.Director" class="form-control" />
                        <span asp-validation-for="UpdateFilmRequest.Director" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="UpdateFilmRequest.Release"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UpdateFilmRequest.Release" type="date" class="form-control" />
                        <span asp-validation-for="UpdateFilmRequest.Release" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label>Categories:</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="UpdateFilmRequest.Categories" asp-items="@Model.CategorySelectList" class="form-control" multiple></select>
                        <span asp-validation-for="UpdateFilmRequest.Categories" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>
