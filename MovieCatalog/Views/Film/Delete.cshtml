@model MovieCatalog.Models.Film.FilmResponse

<form method="post" asp-action="DeletePost" class="border p-4 bg-light">
    <input asp-for="Id" hidden />
    <h2 class="text-info mb-4">Delete Film</h2>

    <div class="row">
        <div class="col-lg-8">
            <div class="form-group row mb-4">
                <label class="col-lg-4 col-form-label">Name:</label>
                <div class="col-lg-8">
                    <input asp-for="Name" disabled class="form-control"/>
                </div>
            </div>

            <div class="form-group row mb-4">
                <label class="col-lg-4 col-form-label">Director:</label>
                <div class="col-lg-8">
                    <input asp-for="Director" disabled class="form-control"/>
                </div>
            </div>

            <div class="form-group row mb-4">
                <label class="col-lg-4 col-form-label">Release Date:</label>
                <div class="col-lg-8">
                    <input asp-for="Release" type="date" disabled class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <h4 class="text-info mb-4">Film Categories</h4>
            <div class="d-flex flex-wrap">
                @foreach (var detail in Model.Categories)
                {
                    <div class="border border-info rounded-pill px-3 py-1 mr-2 mb-2">
                        <div class="text-info">@detail.Name</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="form-group row mt-4">
        <div class="col-lg-8 offset-lg-4">
            <input type="submit" class="btn btn-danger mr-2" value="Delete"/>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-sign-out-alt"></i> Back</a>
        </div>
    </div>
</form>