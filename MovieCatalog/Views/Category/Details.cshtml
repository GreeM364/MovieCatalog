@model MovieCatalog.Models.Category.CategoryResponse

<form method="post">
    <input asp-for="Id" hidden />
    <br />
    <div class="container-fluid bg-white">
        <div class="card">
            <div class="card-header bg-dark text-light row mx-0">
                <div class="col-12 col-md-6 pb-1">
                    <i class="fas fa-table"></i> &nbsp; @Model.Name
                </div>
                <div class="col-12 col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Categories</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3 text-info">
                                    <span>Category Details</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input asp-for="Name" type="text" class="form-control" readonly />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Parent Category</div>
                                <div class="col-9">
                                    <input asp-for="ParentCategory.Name" type="text" class="form-control" readonly />
                                    <span asp-validation-for="ParentCategory.Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5">
                            <h4 class="d-flex justify-content-between align-items-center mb-3 text-info">
                                <span>Films in this Category</span>
                            </h4>
                            <div class="d-flex flex-wrap">
                                @if (Model.Films != null && Model.Films.Any())
                                {
                                    @foreach (var film in Model.Films)
                                    {
                                        <div class="border border-info rounded-pill px-3 py-1 mr-2 mb-2">
                                            <div class="text-info">@film.Name</div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>No films in this category</p>
                                }
                            </div>
                        </div>
                        <div class="col-12 col-lg-5">
                            <h4 class="d-flex justify-content-between align-items-center mb-3 text-info">
                                <span>Child Categories</span>
                            </h4>
                            <div class="d-flex flex-wrap">
                                @if (Model.ChildCategories != null && Model.ChildCategories.Any())
                                {
                                    @foreach (var childCategory in Model.ChildCategories)
                                    {
                                        <div class="border border-info rounded-pill px-3 py-1 mr-2 mb-2">
                                            <div class="text-info">@childCategory.Name</div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>No child categories</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
